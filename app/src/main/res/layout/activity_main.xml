<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/choinka"
        android:layout_width="625dp"
        android:layout_height="663dp"
        android:background="@drawable/choinka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386" />

    <Button
        android:id="@+id/zglos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/zglos"
        android:foregroundGravity="left|center_vertical|center_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/choinka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/choinka"
        app:layout_constraintVertical_bias="0.112" />

    <ImageView
        android:id="@+id/aparat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp"
        android:transitionName="aparat123"
        app:layout_constraintBottom_toBottomOf="@+id/zglos"
        app:layout_constraintStart_toStartOf="@+id/zglos"
        app:layout_constraintTop_toTopOf="@+id/zglos"
        app:srcCompat="@drawable/aparat" />


    <Button
        android:id="@+id/mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="@drawable/mapa"
        app:layout_constraintBottom_toTopOf="@+id/listaa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zglos"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pineska"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp"
        android:transitionName="pineska123"
        app:layout_constraintBottom_toBottomOf="@+id/mapa"
        app:layout_constraintStart_toStartOf="@+id/mapa"
        app:layout_constraintTop_toTopOf="@+id/mapa"
        app:srcCompat="@drawable/pineska" />


    <Button
        android:id="@+id/listaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/listaa"
        app:layout_constraintBottom_toBottomOf="@+id/choinka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zglos"
        app:layout_constraintVertical_bias="0.654" />

    <ImageView
        android:id="@+id/lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp"
        android:transitionName="liasta123"
        app:layout_constraintBottom_toBottomOf="@+id/listaa"
        app:layout_constraintStart_toStartOf="@+id/listaa"
        app:layout_constraintTop_toTopOf="@+id/listaa"
        app:srcCompat="@drawable/lista" />




</androidx.constraintlayout.widget.ConstraintLayout>